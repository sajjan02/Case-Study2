@model IEnumerable<ProductCatalogManagementMicroservice.Models.Product>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Product List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f0f8ff; /* light blue background */
            font-family: 'Arial', sans-serif;
        }

        .table-container {
            margin-top: 50px;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #333;
            font-size: 2.2rem;
            font-weight: bold;
            margin-bottom: 25px;
            letter-spacing: 1px;
        }

        table {
            width: 100%;
            margin-top: 20px;
        }

        th {
            background-color: #007bff; /* blue header */
            color: black;
            text-align: center;
            font-weight: bold;
        }

        td {
            text-align: center;
            vertical-align: middle;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9; /* light gray for even rows */
        }

        tr:hover {
            background-color: #f1f1f1; /* subtle hover effect */
        }

        /* Action buttons */
        .action-links a {
            color: white;
            padding: 8px 15px;
            margin: 0 5px;
            display: inline-block;
            border-radius: 5px;
            font-size: 14px;
            font-weight: bold;
        }

            .action-links a.edit-btn {
                background-color: #17a2b8; /* light blue */
                border: 1px solid #17a2b8;
            }

                .action-links a.edit-btn:hover {
                    background-color: #138496; /* darker blue on hover */
                }

            .action-links a.details-btn {
                background-color: #6c757d; /* gray */
                border: 1px solid #6c757d;
            }

                .action-links a.details-btn:hover {
                    background-color: #5a6268; /* darker gray on hover */
                }

            .action-links a.delete-btn {
                background-color: #e63946; /* bright red */
                border: 1px solid #e63946;
            }

                .action-links a.delete-btn:hover {
                    background-color: #c92a35; /* darker red on hover */
                }

        /* Create and Export buttons */
        .btn-success, .btn-primary {
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0069d9;
                border-color: #0056b3;
            }

        /* Footer */
        .footer {
            text-align: center;
            padding: 20px;
            margin-top: 50px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="container table-container">
        <h2>Product List</h2>

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Inventory Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.InventoryCount</td>
                        <td class="action-links">
                            <a class="edit-btn" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>
                            <a class="details-btn" asp-action="Details" asp-route-id="@item.ProductId">Details</a>
                            <a class="delete-btn" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-right">
            <a asp-action="Create" class="btn btn-success">Create New</a>
            <!-- Export to Excel button -->
            <a asp-action="ExportToExcel" class="btn btn-primary">Export to Excel</a>
        </div>
    </div>

    <div class="footer">
        © 2024 - ProductCatalogManagementMicroservice - <a asp-action="Privacy">Privacy</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
