@model IEnumerable<ProductCatalogManagementMicroservice.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .table {
            background-color: #fff;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        }

            .table th {
                background-color: #343a40;
                color: white;
                text-align: center;
                font-weight: bold;
            }

            .table td {
                text-align: center;
            }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f2f2f2;
        }

        h2 {
            margin-top: 20px;
            text-align: center;
            color: #343a40;
            font-size: 2rem;
            font-weight: bold;
        }

        .btn-primary, .btn-info, .btn-warning, .btn-danger {
            padding: 8px 16px;
            font-size: 14px;
            border-radius: 5px;
            font-weight: bold;
            margin: 0 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .btn-info:hover, .btn-warning:hover, .btn-danger:hover {
            opacity: 0.85;
        }

        .create-btn-container {
            text-align: center;
            margin: 20px 0;
        }

        .download-btn-container {
            text-align: center;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <div class="download-btn-container">
            <a href="@Url.Action("ExportToExcel", "Category")" class="btn btn-success">Download as Excel</a>
        </div>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryId</td>
                        <td>@item.Name</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="create-btn-container">
            <a href="@Url.Action("Create")" class="btn btn-primary">Create New Category</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
