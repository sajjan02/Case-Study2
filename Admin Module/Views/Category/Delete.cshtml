@model ProductCatalogManagementMicroservice.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Category</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-danger">Are you sure you want to delete this?</h5>

                    <dl class="row">
                        <dt class="col-sm-3">Category ID</dt>
                        <dd class="col-sm-9">@Model.CategoryId</dd>

                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>
                    </dl>

                    <!-- Corrected form action -->
                    <form asp-action="Delete" asp-route-id="@Model.CategoryId" method="post">
                        <input type="hidden" asp-for="CategoryId" />
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        border-bottom: 1px solid #dee2e6;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
