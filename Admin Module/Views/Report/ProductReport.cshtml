@model IEnumerable<ProductCatalogManagementMicroservice.Models.Product>
@{
    ViewData["Title"] = "Product Report";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Product Report</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f0f8ff;
            font-family: 'Arial', sans-serif;
        }

        .report-container {
            margin-top: 50px;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #333;
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 25px;
            letter-spacing: 1px;
        }

        table {
            width: 100%;
            margin-top: 20px;
        }

        th {
            background-color: #007bff;
            color: black;
            text-align: center;
            font-weight: bold;
        }

        td {
            text-align: center;
            vertical-align: middle;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        /* Chart container */
        .chart-container {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container report-container">
        <h2>Product Report</h2>

        <!-- Product Data Table -->
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Name</th>
                    <th>Price ($)</th>
                    <th>Inventory Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductId</td>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>@product.InventoryCount</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Product Chart -->
        <div class="chart-container">
            <h3 class="text-center">Product Inventory and Price Overview</h3>
            <canvas id="productChart" width="400" height="200"></canvas>
        </div>

        <!-- Back to Dashboard Button -->
        <div class="text-right mt-4">
            <a href="/Report/Index" class="btn btn-primary">Back to Report Overview</a>
        </div>
    </div>

    <!-- Include Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        var ctx = document.getElementById('productChart').getContext('2d');
        var productChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.Select(p => p.Name))),
                datasets: [
                    {
                        label: 'Inventory Count',
                        data: @Html.Raw(Json.Serialize(Model.Select(p => p.InventoryCount))),
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Price ($)',
                        data: @Html.Raw(Json.Serialize(Model.Select(p => p.Price))),
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Product Quantity and Price'
                    }
                }
            }
        });
    </script>

</body>
</html>
