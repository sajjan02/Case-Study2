@model IEnumerable<ProductCatalogManagementMicroservice.Models.Discount>

@{
    ViewData["Title"] = "Discounts Index";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Discounts List</h4>
                    <button type="button" onclick="location.href='@Url.Action("ExportToExcel")'" class="btn btn-success btn-sm">Download as Excel</button>
                </div>
                <div class="card-body">
                    <p>
                        <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
                    </p>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.First().Code)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                                <th>@Html.DisplayNameFor(model => model.First().DiscountPercentage)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Code)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DiscountPercentage)</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.DiscountId" class="btn btn-warning btn-sm">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.DiscountId" class="btn btn-info btn-sm">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.DiscountId" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        border-bottom: 1px solid #dee2e6;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn {
        margin-right: 5px;
    }

    .table th, .table td {
        vertical-align: middle;
    }
</style>
