@model ProductCatalogManagementMicroservice.Models.Shipment

@{
    ViewData["Title"] = "Edit Shipment";
}

<div class="container mt-4">
    <h1 class="mb-4">Edit Shipment</h1>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Shipment Details</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="ShipmentId" />

                <div class="form-group">
                    <label asp-for="OrderId" class="control-label"></label>
                    <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId">
                        <option value="">Select Order</option>
                    </select>
                    <span asp-validation-for="OrderId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ShipmentDate" class="control-label"></label>
                    <input asp-for="ShipmentDate" class="form-control" type="date" />
                    <span asp-validation-for="ShipmentDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DeliveryDate" class="control-label"></label>
                    <input asp-for="DeliveryDate" class="form-control" type="date" />
                    <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ShippingStatus" class="control-label"></label>
                    <input asp-for="ShippingStatus" class="form-control" />
                    <span asp-validation-for="ShippingStatus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Carrier" class="control-label"></label>
                    <input asp-for="Carrier" class="form-control" />
                    <span asp-validation-for="Carrier" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        border-bottom: 1px solid #dee2e6;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 4px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>
