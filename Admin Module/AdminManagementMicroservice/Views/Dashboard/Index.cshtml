@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
            background-color: #f4f6f9;
        }

        .sidebar {
            height: 100vh;
            background: linear-gradient(180deg, #007bff 0%, #0056b3 100%);
            color: #fff;
            position: fixed;
            width: 250px;
            padding-top: 20px;
            transition: width 0.3s ease;
        }

            .sidebar:hover {
                width: 280px;
            }

            .sidebar a {
                text-decoration: none;
                color: #fff;
                display: block;
                padding: 15px;
                font-size: 18px;
                transition: background-color 0.3s;
            }

                .sidebar a:hover {
                    background-color: #0056b3;
                    border-radius: 5px;
                }

            .sidebar i {
                margin-right: 10px;
            }

        .top-navbar {
            margin-left: 250px;
            padding: 15px;
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .top-navbar input {
                width: 250px;
                border-radius: 20px;
                border: 1px solid #ced4da;
            }

        .dashboard-content {
            margin-left: 250px;
            padding: 20px;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

            .card i {
                font-size: 40px;
                color: #007bff;
                margin-bottom: 10px;
            }

            .card h5 {
                font-size: 20px;
                margin-bottom: 10px;
            }

            .card p {
                color: #6c757d;
            }

            .card a {
                text-decoration: none;
                color: inherit;
            }

        .top-navbar a {
            color: #007bff;
            margin-right: 15px;
        }

            .top-navbar a:hover {
                color: #0056b3;
            }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h3 class="text-center">Admin Panel</h3>
        <hr />
        <a asp-controller="Dashboard" asp-action="Index"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a asp-controller="Orders" asp-action="Index"><i class="fas fa-box"></i> Orders</a>
        <a asp-controller="Product" asp-action="Index"><i class="fas fa-boxes"></i> Products</a>
        <a asp-controller="Category" asp-action="Index"><i class="fas fa-tags"></i> Categories</a>
        <a asp-controller="Users" asp-action="Index"><i class="fas fa-users"></i> Users</a>
        <a asp-controller="Reviews" asp-action="Index"><i class="fas fa-file-alt"></i> Reviews</a>
        <a asp-controller="Discounts" asp-action="Index"><i class="fas fa-cog"></i> Discounts</a>
    </div>

    <!-- Top Navigation -->
  @*   <div class="top-navbar">
        <div>
            <a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
            <a asp-controller="Admin" asp-action="Index"><i class="fas fa-user"></i> Admin</a>
        </div>
        <input type="text" class="form-control" placeholder="Search" />
    </div> *@

    <!-- Dashboard Content -->
    <div class="dashboard-content">
        <h2 class="mb-4">Dashboard Overview</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card p-3 mb-4">
                    <a asp-controller="Orders" asp-action="Index">
                        <i class="fas fa-box"></i>
                        <h5>Orders</h5>
                        <p>Manage all customer orders</p>
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 mb-4">
                    <a asp-controller="Product" asp-action="Index">
                        <i class="fas fa-boxes"></i>
                        <h5>Products</h5>
                        <p>Manage your product inventory</p>
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 mb-4">
                    <a asp-controller="Category" asp-action="Index">
                        <i class="fas fa-tags"></i>
                        <h5>Categories</h5>
                        <p>Manage product categories</p>
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card p-3 mb-4">
                    <a asp-controller="Users" asp-action="Index">
                        <i class="fas fa-users"></i>
                        <h5>Users</h5>
                        <p>Manage registered users</p>
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 mb-4">
                    <a asp-controller="Reviews" asp-action="Index">
                        <i class="fas fa-file-alt"></i>
                        <h5>Reviews</h5>
                        <p>View and manage user reviews</p>
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 mb-4">
                    <a asp-controller="Discounts" asp-action="Index">
                        <i class="fas fa-cog"></i>
                        <h5>Discounts</h5>
                        <p>Manage system settings and preferences</p>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
