@model ProductCatalogManagementMicroservice.Models.Review

@{
    ViewData["Title"] = "Delete Confirmation";
}

<div class="container mt-4">
    <h1 class="mb-4">Delete Confirmation</h1>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Are you sure you want to delete this review?</h4>
        </div>
        <div class="card-body">
            <h4>Review Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Rating)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Rating)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Comment)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Comment)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.ReviewDate)
                </dt>
                <dd class="col-sm-9">
                    @if (Model.ReviewDate.HasValue)
                    {
                        @Model.ReviewDate.Value.ToString("MMMM d, yyyy")
                    }
                    else
                    {
                        <span>No date available</span>
                    }
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Product)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Product.ProductId)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.User.UserId)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-right">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="ReviewId" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        border-bottom: 1px solid #dee2e6;
    }

    .card-footer {
        background-color: #f8f9fa;
    }

    .font-weight-bold {
        font-weight: 500;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>
