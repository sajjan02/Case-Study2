@model ProductCatalogManagementMicroservice.Models.Discount

@{
    ViewData["Title"] = "Discount Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Discount Details</h4>
                </div>
                <div class="card-body">
                    <div>
                        <h4>Details</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Code)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Code)
                            </dd>
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt class="col-sm-4 font-weight-bold">
                                @Html.DisplayNameFor(model => model.DiscountPercentage)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.DiscountPercentage)
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <a asp-action="Edit" asp-route-id="@Model?.DiscountId" class="btn btn-warning">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        border-bottom: 1px solid #dee2e6;
    }

    .font-weight-bold {
        font-weight: 500;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
