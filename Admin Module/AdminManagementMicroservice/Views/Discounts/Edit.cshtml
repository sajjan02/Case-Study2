@model ProductCatalogManagementMicroservice.Models.Discount

@{
    ViewData["Title"] = "Edit Discount";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Discount</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="DiscountId" />
                        <div class="form-group">
                            <label asp-for="Code" class="form-label">Discount Code</label>
                            <input asp-for="Code" class="form-control" placeholder="Enter discount code" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="form-label">Description</label>
                            <input asp-for="Description" class="form-control" placeholder="Enter description" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DiscountPercentage" class="form-label">Discount Percentage</label>
                            <input asp-for="DiscountPercentage" class="form-control" placeholder="Enter discount percentage" />
                            <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .card {
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        border-bottom: 1px solid #dee2e6;
    }

    .form-label {
        font-weight: 500;
    }

    .form-control::placeholder {
        color: #6c757d;
        opacity: 1;
    }
</style>
