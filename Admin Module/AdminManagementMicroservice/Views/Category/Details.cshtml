@model ProductCatalogManagementMicroservice.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f7f7f7;
        }

        h2 {
            margin-top: 20px;
            text-align: center;
            color: #343a40;
            font-size: 2rem;
            font-weight: bold;
        }

        .details-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
            max-width: 700px;
            margin: 30px auto;
        }

        .details-header {
            color: #007bff;
            font-weight: bold;
            font-size: 1.5rem;
            text-align: center;
        }

        dl.row {
            margin-bottom: 0;
        }

        dt {
            color: #495057;
            font-weight: bold;
            font-size: 1.1rem;
        }

        dd {
            font-size: 1.1rem;
        }

        .btn {
            margin: 10px;
            font-size: 1.1rem;
            padding: 10px 20px;
            border-radius: 5px;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn:hover {
            opacity: 0.9;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <div class="details-container">
            <div class="details-header">
                Category Details
            </div>
            <hr />

            <dl class="row">
                <dt class="col-sm-4">Category ID:</dt>
                <dd class="col-sm-8">@Model.CategoryId</dd>

                <dt class="col-sm-4">Name:</dt>
                <dd class="col-sm-8">@Model.Name</dd>
            </dl>

            <div class="text-center mt-4">
                <a href="@Url.Action("Edit", new { id = Model.CategoryId })" class="btn btn-warning">Edit</a>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
